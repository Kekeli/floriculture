
<div id="list">
	
	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Family</th><th>Genus</th><th>Species</th><th>Common Name</th><th>Section</th><th>Bench</th><th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% plants.forEach( function ( plant ){ %>
				<tr>
					<!-- <td><%= plant.image %></td> -->
					<td><a class="update-link" href="/plants/<%= plant._id %>" title="Display this plant">
						<%= plant.Family %></a></td>
					<td><%= plant.Genus ? plant.Genus : '' %></td>
					<td><%= plant.Species ? plant.Species : '' %></td>
					<td><%= plant.Common_Name ? plant.Common_Name : '' %></td>
					
					<td><%= plant.Section ? plant.Section : ''%></td>
					<td><%= plant.Bench ? plant.Bench : ''%></td>
					<td>
						<a class="btn btn-small" href="/plants/<%= plant._id %>" title="Details">Details</a>
						<a class="btn btn-small" href="/plants/edit/<%= plant._id %>" title="Edit" disabled="true">Edit</a>
    					<!--<a class="btn btn-small btn-danger" href="/plants/destroy/<%= plant._id %>" title="Delete">Delete</a>-->
    				</td>
   				</tr>
			<% }); %>
		</tbody>
	</table>
	
	<%- plants.pagination.render({ baseUrl: '/plants' }) %>

	<!-- todo: display only for editor roles -->
	<a class="btn btn-small btn-primary pull-right" href="/plants/new" disabled="true">Add</a>
	<br />
</div>